{
  "manifest_version": 3,
  "name": "Clio satelite",
  "version": "1.0",
  "description": "Expanding Creatio capabilities for professionals",
  "permissions": ["scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*Shell/"],
      "css": ["styles/shell.css"],
      "js": ["domainExclusions.js", "creatioDetector.js", "loginHelper.js", "content.js"]
    },
    { 
      "matches": ["*://*/*NuiLogin.aspx*", "*://*/*Login.html*"],
      "css": ["styles/login.css"],
      "js": ["login.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "scripts/*", "icon48.png", "icon128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}